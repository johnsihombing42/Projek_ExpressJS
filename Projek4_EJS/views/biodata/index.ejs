  <body>
    <div class="container">
        <div class="jumbotron">
          <h1>Aplikasi Biodata</h1>
        </div>


      <br>
      <br>
<div class="container">
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Nama</th>
            <th scope="col">Alamat</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
        <% for(let i=0;i<data.length;i++){%>
            <tr>
                <td><%=data[i].nama%></td>
                <td><%=data[i].alamat%></td>
                <td>
                       <a href="biodata/create"><button  type="submit" class="btn btn-primary">Tambah Data</button></a> 
                       <a href="biodata/<%= data[i].id_biodata %> /edit"><button  type="submit" class="btn btn-warning">Edit Data</button></a> 
                       <!-- <a href ac="biodata/<%= data[i].id_biodata %> _method=delete" method="post"><button  type="submit" class="btn btn-danger">Hapus Data</button></a>  -->
                       <form action="/biodata/<%=data[i].id_biodata%>?_method=delete" method="post">
                        <button  type="submit" class="btn btn-danger">Hapus Data</button></a>  
                    </form>
                      <!-- <form action="/biodata/<%=data[i].id_biodata%>?_method=delete" method="post">
                        <button  type="submit" class="btn btn-danger">Hapus Data</button></a> 
                      </form> -->
                      
                </td>
            </tr>
        <%}; %>    
        </tbody>
      </table>
</div>

    </div>

